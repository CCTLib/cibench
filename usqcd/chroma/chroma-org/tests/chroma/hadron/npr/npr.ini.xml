<?xml version="1.0"?>
<chroma>
<annotation>
NPR input
</annotation>
<Param> 
  <InlineMeasurements>
    <elem>
      <!-- Coulomb gauge fix -->
      <Name>COULOMB_GAUGEFIX</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>1</version>
        <GFAccu>1.0e-5</GFAccu>
        <GFMax>200</GFMax>
        <OrDo>false</OrDo>
        <OrPara>1.0</OrPara>
        <j_decay>-3</j_decay>
      </Param>
      <NamedObject>
        <gauge_id>default_gauge_field</gauge_id>
        <gfix_id>landau_cfg</gfix_id>
        <gauge_rot_id>gauge_rot</gauge_rot_id>
      </NamedObject>
    </elem>

<annotation>
 Some applications may want this to be a point source propagator
</annotation>
    <elem>
      <Name>MAKE_SOURCE</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>6</version>
        <Source>
          <version>1</version>
          <SourceType>MOMENTUM_VOLUME_SOURCE</SourceType>
          <j_decay>3</j_decay>
          <mom> 0  1 0 0</mom>
          <!-- no averaging over momenta is allowed for NPR -->
	  <av_mom>false</av_mom>
          <t_srce>0 0 0 0</t_srce>
        </Source>
      </Param>
      <NamedObject>
        <gauge_id>landau_cfg</gauge_id>
        <source_id>sh_source_0</source_id>
      </NamedObject>
    </elem>

    <elem>
      <Name>PROPAGATOR</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>10</version>
        <quarkSpinType>FULL</quarkSpinType>
        <obsvP>false</obsvP>
        <numRetries>1</numRetries>
        <FermionAction>
         <FermAct>WILSON</FermAct>
         <Kappa>0.12</Kappa>
         <AnisoParam>
           <anisoP>false</anisoP>
           <t_dir>3</t_dir>
           <xi_0>2.464</xi_0>
           <nu>0.95</nu>
         </AnisoParam>
         <FermionBC>
           <FermBC>SIMPLE_FERMBC</FermBC>
           <boundary>1 1 1 1</boundary>
         </FermionBC>
        </FermionAction>
        <InvertParam>
          <invType>CG_INVERTER</invType>
          <RsdCG>1.0e-10</RsdCG>
          <MaxCG>1000</MaxCG>
        </InvertParam>
      </Param>
      <NamedObject>
        <gauge_id>landau_cfg</gauge_id>
        <source_id>sh_source_0</source_id>
        <prop_id>prop_0</prop_id>
      </NamedObject>
    </elem>

    <elem>
        <annotation>
                Do the NPR thing
        </annotation>
        <Name>NPR</Name>
        <Frequency>1</Frequency>  
	<max_mom2>2</max_mom2>
        <output_type>XML</output_type>
	<filename>./fft_prop.lime</filename>
        <NamedObject>
          <gauge_id>landau_cfg</gauge_id>
          <prop_id>prop_0</prop_id>
        </NamedObject>
    </elem>


  </InlineMeasurements>
   <nrow>4 4 4 8</nrow>
</Param>

<RNG>
  <Seed>	
    <elem>11</elem>
    <elem>11</elem>
    <elem>11</elem>
    <elem>0</elem>
  </Seed>
</RNG>

<Cfg>
 <cfg_type>WEAK_FIELD</cfg_type>
 <cfg_file>test</cfg_file>
</Cfg>

</chroma>


